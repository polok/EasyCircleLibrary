<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pl.polak.circle.example.MainActivity$PlaceholderFragment">

    <pl.polak.circle.CircleProgressBar
        android:id="@+id/circle_progress_bar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        circle:circleColor="#ff0370ff"
        circle:circleStrokeWidth="20"
        circle:circleStartAngle="270"/>

    <pl.polak.circle.BorderCircleProgressBar
        android:id="@+id/border_circle_progress_bar"
        android:layout_below="@id/circle_progress_bar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        circle:circleColor="#ff61a100"
        circle:circleStrokeWidth="20"
        circle:circleStartAngle="270"
        circle:innerCircleColor="#ff61a100"
        circle:innerCircleStrokeWidth="3"
        circle:outerCircleColor="#ff61a100"
        circle:outerCircleStrokeWidth="3"/>

</RelativeLayout>
